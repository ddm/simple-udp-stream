{
  "name": "simple-udp-stream",
  "version": "0.0.1",
  "description": "Writable stream over UDP",
  "author": "Dimitri del Marmol",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm install -g jsdoc mocha plato eslint istanbul",
    "test": "mocha",
    "doc": "jsdoc .",
    "report": "plato -d out *.js test/*.js",
    "lint": "eslint *.js test/*.js",
    "coverage": "istanbul cover --report html node_modules/.bin/_mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddm/simple-udp-stream.git"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-underscore-dangle": 0,
      "quotes": 0,
      "camelcase": 0,
      "curly": 0
    }
  },
  "dependencies": {
    "lodash": "^3.6.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "mocha": "^2.2.1"
  }
}
