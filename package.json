{
  "name": "simple-udp-stream",
  "version": "1.2.1",
  "description": "Writable stream over UDP",
  "keywords": [
    "udp",
    "stream",
    "bunyan",
    "logstash"
  ],
  "author": "Dimitri del Marmol",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "coverage": "istanbul cover --report html node_modules/.bin/_mocha",
    "doc": "jsdoc -d doc .",
    "lint": "eslint *.js test/*.js",
    "report": "plato -l .jshintrc -d report *.js test/*.js",
    "audit": "nsp audit-package",
    "upgrade-dependencies": "ncu -ua && npm i",
    "prepare-release": "npm test && npm run lint && npm run audit",
    "publish-release": "git push && git push --tags && npm publish",
    "patch-release": "run run prepare-release && npm version patch && npm run publish-release",
    "minor-release": "run run prepare-release && npm version minor && npm run publish-release",
    "major-release": "run run prepare-release && npm version major && npm run publish-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddm/simple-udp-stream.git"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "dependencies": {
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "bunyan": "^1.5.1",
    "chai": "^3.3.0",
    "eslint": "^1.5.1",
    "istanbul": "^0.3.21",
    "jsdoc": "^3.3.3",
    "mocha": "^2.3.3",
    "npm-check-updates": "^2.2.4",
    "nsp": "^1.1.0",
    "plato": "^1.5.0"
  }
}
