{
  "name": "simple-udp-stream",
  "version": "1.1.1",
  "description": "Writable stream over UDP",
  "keywords": [
    "udp",
    "stream",
    "bunyan",
    "logstash"
  ],
  "author": "Dimitri del Marmol",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha",
    "coverage": "node_modules/.bin/istanbul cover --report html node_modules/.bin/_mocha",
    "doc": "node_modules/.bin/jsdoc -d doc .",
    "lint": "node_modules/.bin/eslint *.js test/*.js",
    "report": "node_modules/.bin/plato -l .jshintrc -d report *.js test/*.js",
    "audit": "node_modules/.bin/nsp audit-package",
    "upgrade-dependencies": "node_modules/.bin/npm-check-updates -u",
    "patch-release": "npm test && npm run lint && npm run audit && npm version patch && git push && git push --tags && npm publish",
    "minor-release": "npm test && npm run lint && npm run audit && npm version minor && git push && git push --tags && npm publish",
    "major-release": "npm test && npm run lint && npm run audit && npm version major && git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddm/simple-udp-stream.git"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "dependencies": {
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "bunyan": "^1.3.4",
    "chai": "^2.2.0",
    "eslint": "^0.19.0",
    "istanbul": "^0.3.13",
    "jsdoc": "^3.3.0-beta3",
    "mocha": "^2.2.4",
    "npm-check-updates": "^1.5.1",
    "nsp": "^1.0.1",
    "plato": "^1.4.0"
  }
}
